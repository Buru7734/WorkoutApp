<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Workouts</title>
  </head>
  <%- include('../partials/_navbar.ejs') %>
  <body>
    <main>
      <h1>Workouts</h1>
      <h2>Your workouts:</h2>
      <% if (workOuts.length === 0){ %>
      <p>You have no Workouts You are weak!</p>

      <%}%>
      <ul>
        <% workOuts.forEach(workout => { %>
        <li>
          <a href="/workouts/<%= workout._id%>"> <%= workout.title%></a
          ><a href="/workouts/<%= workout._id%>/edit">Edit</a>
        </li>
        <% }) %>
      </ul>

      <a href="/workouts/new" id="newBtn">New WorkOut</a>
    </main>
  </body>
  <style>
    /* Reset / Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background: #f9f9f9;
      color: #333;
      line-height: 1.6;
      padding: 20px;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: #2a2a2a;
      text-align: center;
    }

    h2 {
      font-size: 1.5rem;
      margin: 20px 0;
      text-align: center;
      color: #555;
    }
    a {
      font-size: 1.5rem;
      margin: 20px 0;
      text-align: center;
      color: #555;
    }

    p {
      font-size: 1.5rem;
      margin: 20px 0;
      text-align: center;
      color: #555;
    }

    /* Form Styles */
    form {
      background: white;
      padding: 20px 30px;
      border-radius: 8px;
      max-width: 500px;
      margin: 0 auto 30px auto;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    form label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: bold;
      color: #555;
    }

    form input,
    form textarea,
    form select {
      width: 100%;
      padding: 0.6rem 1rem;
      margin-bottom: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      background: #fafafa;
      font-size: 1rem;
      color: #333;
    }

    form input:focus,
    form textarea:focus,
    form select:focus {
      outline: none;
      border-color: #008cba;
    }

    /* Buttons */
    button,
    a.button {
      display: inline-block;
      padding: 0.6rem 1.2rem;
      font-size: 1rem;
      background: #008cba;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.3s ease, transform 0.1s ease;
    }

    button:hover,
    a.button:hover {
      background: #0079a1;
    }

    button:active,
    a.button:active {
      transform: scale(0.98);
    }

    /* Workouts List */
    ul {
      list-style: none;
      max-width: 600px;
      margin: 0 auto;
      padding: 0;
    }

    ul li {
      background: white;
      padding: 15px 20px;
      margin-bottom: 10px;
      border-radius: 6px;
      border-left: 6px solid #008cba;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    ul li a {
      font-weight: bold;
      color: #333;
      text-decoration: none;
    }

    ul li a:hover {
      color: #008cba;
    }

    /* Inline buttons for edit/delete */
    ul li .actions {
      display: flex;
      gap: 10px;
    }

    ul li .actions form {
      margin: 0;
    }

    ul li .actions button {
      padding: 0.4rem 0.8rem;
      font-size: 0.9rem;
    }

    ul li .actions .edit-btn {
      background: #f39c12;
    }

    ul li .actions .edit-btn:hover {
      background: #d68910;
    }

    ul li .actions .delete-btn {
      background: #e74c3c;
    }

    ul li .actions .delete-btn:hover {
      background: #c0392b;
    }

    /* Responsive */
    @media (max-width: 600px) {
      form,
      ul {
        padding: 0 15px;
      }

      button,
      a.button {
        width: 100%;
        text-align: center;
      }

      ul li {
        flex-direction: column;
        align-items: flex-start;
      }

      ul li .actions {
        margin-top: 10px;
        width: 100%;
        justify-content: flex-start;
      }
    }
  </style>
</html>
